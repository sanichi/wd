$(function () {
  $('#copy_emails').click(function (e) {
    e.preventDefault();
    navigator.clipboard.writeText($('#emails_to_copy').val()).then(function () {
      $('#copy_emails').text('<%= t("player.contact.copied", count: count) %>').removeClass('btn-success').addClass('btn-secondary');
    }, function () {
      alert('<%= t("player.contact.copied", count: 0) %>');
    });
  });
});
