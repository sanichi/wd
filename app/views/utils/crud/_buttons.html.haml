= form.submit t("save"), class: "btn btn-primary btn-sm"
= link_to t("cancel"), object.new_record?? index : object, class: "btn btn-secondary btn-sm"
- if !object.new_record? && can?(:destroy, object)
  = link_to t("delete"), object, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: t("sure") }
