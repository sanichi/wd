var pgn = "<%= j @game.pgn.html_safe %>";
var chess = new Chess();
var ok = chess.load_pgn(pgn, { sloppy: true });
ok ? chess.back_to_start() : chess.clear();
var board = Chessboard('board', {
    showNotation: false,
    position: chess.fen(),
  });
$(window).resize(function() {
  board.resize();
});
