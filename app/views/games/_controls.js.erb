import { Game } from "game"

$(function() {

  // for displaying the game
  var game = new Game("<%= j game.pgn.html_safe %>", '<%= game.orientation %>', 'board');
  var study = <%= game.study? ? 'true' : 'false' %>;

  // if start move is not the first
  var start = <%= move %>;
  if (start > 0)
  {
    game.seek(start);
    highlight_current();
  }

  // button controls
  $('.controls .control').click(function(e) {
    switch($(this).data('direction')) {
      case '<<':
        game.goto_start();
        highlight_current();
        break;
      case '<':
        game.take_back();
        highlight_current();
        break;
      case '>':
        game.play_move();
        highlight_current();
        break;
      case '>>':
        game.goto_end();
        highlight_current();
        break;
      case 'o':
        game.flip();
        highlight_current();
        break;
    }
  });

  // keyboard controls
  $(window).keydown(function(e) {
    switch (e.keyCode) {
      case 39: // right arrow
        game.play_move();
        highlight_current();
        break;
      case 37: // left arrow
        game.take_back();
        highlight_current();
        break;
      case 69: // 'e' for end
        game.goto_end();
        highlight_current();
        break;
      case 83: // 's' for start
        game.goto_start();
        highlight_current();
        break;
      case 79: // 'o' meaning rotate board
        game.flip();
        break;
      case 77: // 'm' meaning show moves
        if (study) $('#show_moves').trigger('click');
        break;
    }
  });

  // click move controls
  $('.moves .move').click(function() {
    var i = parseInt($(this).data('i'));
    game.seek(i);
    highlight_current();
  });

  // resize the board when the window changes
  $(window).resize(function() {
    game.resize();
  });

  // for toggling the PGN which is initally hidden
  // $('#toggle_pgn').click(function(e) {
  //   e.preventDefault();
  //   $('pre.pgn').toggle();
  // });
  // $('pre.pgn').hide();

  // for showing the moves which are initally hidden for studies
  if (study)
  {
    $('#show_moves').click(function(e) {
      e.preventDefault();
      $('#moves').show();
      $('#show_moves').parent().hide();
    });
    $('#moves').hide();
  }

  function highlight_current() {
    $('.moves .move').removeClass('current-move');
    let current_move = game.current_move();
    if (current_move > 0) {
      $('.moves .move').each(function(i) {
        if (current_move == i + 1) {
          $(this).addClass('current-move');
        }
      });
    }
  }
});
