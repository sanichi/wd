- @blogs.matches.each do |blog|
  %tr
    %td= link_to blog_title_with_draft(blog), blog, class: (blog.draft ? "text-danger" : "")
    %td= blog.summary.truncate(50)
    %td.text-center= blog.user&.handle
    %td.text-center= blog.created_at.strftime('%Y-%m-%d')
    %td.text-center= blog.updated_at.strftime('%Y-%m-%d')
= render "utils/pagination/links", pager: @blogs, columns: 4
