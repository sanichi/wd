- set_meta_tags title: @game.title

= content_for :javascript do
  = render "controls.js"

.row
  %div{class: center(xl: 6, lg: 8, md: 10, sm: 12)}
    %article
      .header
        %h3.d-inline= title_and_difficulty(@game)
        - if can?(:edit, @game)
          .float-right.mt-1
            = link_to t("edit"), edit_game_path(@game), class: "btn btn-info"
      .body.pb-0
        .row
          %div{class: center(sm: 6, xs: 8)}
            #board.mb-3
            = render "controls.html.haml"
      - if @game.study?
        .body.text-center
          = link_to t("game.show_moves"), "#", id: "show_moves"
      .body#moves
        .moves= @game.moves
      .footer
        .small
          = render "utils/misc/user_stamp", object: @game, updated: false
          .float-right
            = link_to t("game.pgn"), "#", id: "toggle_pgn"

    %pre.pgn= @game.pgn
