.row
  .offset-lg-2.col-lg-8.offset-md-1.col-md-10
    = form_for object, html: { class: "crud" } do |form|
      - vars = { form: form, object: object }
      - inputs.each do | param, label, type, options |
        = render "utils/crud/#{type}", vars.merge({ param: param, label: label }).merge(options || {})
      = render "utils/crud/buttons", form: form, object: object, index: index
