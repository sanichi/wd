    [:sca_rating,  t("player.sca_rating"),      :text],
    [:fide_id,     t("player.fide_id"),         :text],
    [:fide_rating, t("player.fide_rating"),     :text],
    [:federation,  t("player.federation"),      :text],
    [:title,       t("player.title"),           :select, menu: player_title_menu(player.title)],
    [:email,       t("player.email"),           :text],
    [:phone,       t("player.phone"),           :text],
    [:contact,     t("player.contact.contact"), :check],
  ]
