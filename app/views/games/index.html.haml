:ruby
  inputs = [
    [:query,      t("query"),           :text_field, size: 16],
    [:difficulty, t("game.difficulty"), :select,     menu: game_difficulty_menu(params[:difficulty], search: true)],
  ]
  set_meta_tags title: t("game.games"), description: t("game.description"), keywords: t("game.keywords")

.row
  %div{class: center(xl: 6, lg: 8, md: 10, sm: 12)}
    %section
      .header
        %h3.d-inline= t("game.games")
        - if can?(:create, Game)
          .float-right.small= link_to t("game.new"), new_game_path, class: "btn btn-info"
      .body
        = render "utils/search/form", index: games_path, inputs: inputs
        %table{class: "table table-bordered table-striped table-sm mt-3"}
          %thead
            %tr
              %th= t("game.title")
          %tbody#results
            = render "results", games: @games
